{% block title %}Perfil de {{ usuario.nombreUsuario }}{% endblock %}

{% block body %}
  <link rel="stylesheet" href="{{ asset('css/perfil.css') }}">
    <div class="container">
    <h1>Perfil de {{ usuario.nombreUsuario }}</h1>

    {% if usuario.fotoPerfil %}
        <img src="{{ asset('uploads/' ~ usuario.fotoPerfil) }}" alt="Foto de perfil">
        {% if propietario %}
            <form method="POST" action="{{ path('quitar_foto_perfil', { id: usuario.id }) }}">
                <button type="submit">âŒ Quitar foto</button>
            </form>
        {% endif %}
    {% endif %}

    {% if propietario %}
        <a href="{{ path('subir_foto_perfil', { id: usuario.id }) }}">ğŸ“¸ Subir Foto</a>
        <a href="{{ path('editar_perfil', { id: usuario.id }) }}">âœï¸ Editar Perfil</a>
    {% else %}
        <!-- ğŸ”¥ SecciÃ³n de Amistad -->
        {% if solicitudPendiente == 'ninguna' %}
            <form method="POST" action="{{ path('enviar_solicitud', { id: usuario.id }) }}">
                <button type="submit">â• Seguir</button>
            </form>
        {% elseif solicitudPendiente == 'pendiente' %}
            <p>â³ Solicitud Enviada</p>
        {% elseif solicitudPendiente == 'aceptada' %}
            <form method="POST" action="{{ path('eliminar_amistad', { id: usuario.id }) }}">
                <button type="submit">âŒ Dejar de seguir</button>
            </form>
        {% endif %}
    {% endif %}

    <!-- ğŸ”¥ Publicaciones (solo si son amigos) -->
    {% if propietario or solicitudPendiente == 'aceptada' %}
        <h2>Publicaciones</h2>
        {% if propietario %}
            <h3>Publicar nuevo mensaje</h3>
            <form method="POST" action="{{ path('nueva_publicacion', { id: usuario.id }) }}">
                <textarea name="contenido" required placeholder="Escribe algo..."></textarea>
                <button type="submit">Publicar</button>
            </form>
        {% endif %}

        {% if publicaciones is empty %}
            <p>No hay publicaciones aÃºn.</p>
        {% else %}
            <ul>
                {% for publicacion in publicaciones %}
                    <li>
                        <p>{{ publicacion.contenido }}</p>
                        <small>Publicado el {{ publicacion.fechaCreacion|date('d/m/Y H:i') }}</small>
                        <br>
                        <a href="{{ path('ver_publicacion', { id: publicacion.id }) }}">ğŸ’¬ Ver comentarios</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    {% else %}
        <p>ğŸ”’ Debes ser amigo de {{ usuario.nombreUsuario }} para ver sus publicaciones.</p>
    {% endif %}

    <a href="{{ path('ctrl_home') }}" class="btn">ğŸ  Volver al inicio</a>
</div>

{% endblock %}
