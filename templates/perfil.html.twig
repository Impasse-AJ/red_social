{% extends 'base.html.twig' %}

{% block title %}Perfil de {{ usuario.nombreUsuario }}{% endblock %}

{% block body %}
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    min-height: 100vh;
}

.container {
    width: 90%;
    max-width: 600px;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
}

h1, h2, h3 {
    color: #333;
    text-align: center;
}

img {
    display: block;
    margin: 20px auto;
    border-radius: 10%;
    width: 150px;
}

a {
    display: inline-block;
    text-decoration: none;
    color: white;
    background-color: #007BFF;
    padding: 10px 15px;
    margin: 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

a:hover {
    background-color: #0056b3;
}

form {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

textarea {
    width: 100%;
    max-width: 500px;
    height: 100px;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
}

button {
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-top: 10px;
}

button:hover {
    background-color: #218838;
}

ul {
    list-style-type: none;
    padding: 0;
}

li {
    background-color: white;
    padding: 15px;
    margin: 10px 0;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    text-align: left;
}

small {
    display: block;
    margin-top: 5px;
    font-size: 0.9em;
    color: #666;
}

.btn {
    background-color: #007BFF;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
}

.btn:hover {
    background-color: #0056b3;
}

    </style>

    <div class="container">
    <h1>Perfil de {{ usuario.nombreUsuario }}</h1>

    {% if usuario.fotoPerfil %}
        <img src="{{ asset('uploads/' ~ usuario.fotoPerfil) }}" alt="Foto de perfil">
    {% endif %}

    {% if propietario %}
        <a href="{{ path('subir_foto_perfil', { id: usuario.id }) }}">üì∏ Subir Foto</a>
        <a href="{{ path('editar_perfil', { id: usuario.id }) }}">‚úèÔ∏è Editar Perfil</a>
    {% endif %}

    <h2>Publicaciones</h2>
    {% if propietario %}
        <h3>Publicar nuevo mensaje</h3>
        <form method="POST" action="{{ path('nueva_publicacion', { id: usuario.id }) }}">
            <textarea name="contenido" required placeholder="Escribe algo..."></textarea>
            <button type="submit">Publicar</button>
        </form>
    {% endif %}

    {% if publicaciones is empty %}
        <p>No hay publicaciones a√∫n.</p>
    {% else %}
        <ul>
            {% for publicacion in publicaciones %}
                <li>
                    <p>{{ publicacion.contenido }}</p>
                    <small>Publicado el {{ publicacion.fechaCreacion|date('d/m/Y H:i') }}</small>
                    <br>
                    <a href="{{ path('ver_publicacion', { id: publicacion.id }) }}">üí¨ Ver comentarios</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <a href="{{ path('ctrl_home') }}" class="btn">üè† Volver al inicio</a>
</div>

{% endblock %}
