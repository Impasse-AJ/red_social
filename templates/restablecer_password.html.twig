{% block title %}Restablecer Contraseña{% endblock %}

{% block body %}
    <div class="container">
        <h2>Restablecer Contraseña</h2>

        {% if error %}
            <p class="error">{{ error }}</p>
        {% endif %}

        {% if codigo %}
            <form method="POST" action="{{ path('procesar_restablecimiento') }}">
                <input type="hidden" name="codigo" value="{{ codigo }}">

                <label for="password">Nueva Contraseña:</label>
                <input type="password" id="password" name="password">

                <label for="confirm_password">Confirmar Contraseña:</label>
                <input type="password" id="confirm_password" name="confirm_password">

                <button type="submit">Restablecer</button>
            </form>
        {% else %}
            <p class="error">El código de recuperación no es válido o ha expirado.</p>
        {% endif %}

        <p><a href="{{ path('ctrl_login') }}">Volver al inicio de sesión</a></p>
    </div>
{% endblock %}
