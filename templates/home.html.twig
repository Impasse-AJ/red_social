{% extends 'base.html.twig' %}

{% block title %}Bienvenido - Red Social{% endblock %}

{% block styles %}
<style>
/* Estilos generales */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 20px;
    text-align: center;
}

h1 {
    color: #333;
}

p {
    font-size: 18px;
    color: #555;
}

/* Estilos para enlaces */
a {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}

/* Estilos de tabla */
table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #007bff;
    color: white;
}

tr:hover {
    background-color: #f1f1f1;
}
</style>
{% endblock %}

{% block body %}
    <h1>Bienvenido, {{ usuario.nombreUsuario }} ðŸ‘‹</h1>
    <p>Explora la red social y conÃ©ctate con otros usuarios.</p>

    <!-- SecciÃ³n de "Mi Perfil" -->
    <p><a href="{{ path('ver_perfil', { id: usuario.id }) }}">ðŸ‘¤ Mi Perfil</a></p>

    <h2>Lista de Usuarios</h2>
    <table>
        <thead>
            <tr>
                <th>Nombre de Usuario</th>
                <th>Perfil</th>
            </tr>
        </thead>
        <tbody>
            {% for u in usuarios %}
                {% if u.id != usuario.id %} {# Excluye al usuario autenticado #}
                    <tr>
                        <td>{{ u.nombreUsuario }}</td>
                        <td>
                            <a href="{{ path('ver_perfil', { id: u.id }) }}">Ver Perfil</a>
                        </td>
                    </tr>
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="2">No hay usuarios registrados.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}


